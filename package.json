{
	"name": "explorer-overhaul",
	"version": "1.0.0",
	"files": [
		"src",
		"icon.png"
	],
	"main": "./src/index.js",
	"type": "module",
	"icon": "./icon.png",
	"displayName": "Explorer Overhaul",
	"publisher": "koffeine",
	"activationEvents": [],
	"contributes": {
		"commands": [
			{
				"command": "explorer-overhaul.replaceInFolderWithWorkbenchStateFolder",
				"title": "Replace in Folder..."
			},
			{
				"command": "explorer-overhaul.replaceInFolderWithWorkbenchStateWorkspace",
				"title": "Replace in Folder..."
			}
		],
		"menus": {
			"commandPalette": [
				{
					"when": "false",
					"command": "explorer-overhaul.replaceInFolderWithWorkbenchStateFolder"
				},
				{
					"when": "false",
					"command": "explorer-overhaul.replaceInFolderWithWorkbenchStateWorkspace"
				}
			],
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder && workbenchState === 'folder'",
					"group": "4_search@20",
					"command": "explorer-overhaul.replaceInFolderWithWorkbenchStateFolder"
				},
				{
					"when": "explorerResourceIsFolder && workbenchState === 'workspace'",
					"group": "4_search@20",
					"command": "explorer-overhaul.replaceInFolderWithWorkbenchStateWorkspace"
				}
			]
		}
	},
	"scripts": {
		"postinstall": "cp node_modules/@types/node/string_decoder.d.ts node_modules/string_decoder/lib",
		"test": "eslint && tsc -p jsconfig.json",
		"build": "vsce package --allow-missing-repository --skip-license"
	},
	"devDependencies": {
		"@koffeine/eslint-config": "^48.1.0",
		"@types/node": "^24.10.13",
		"@types/punycode": "^2.1.4",
		"@types/vscode": "^1.109.0",
		"@vscode/vsce": "^3.7.1",
		"eslint": "^10.0.1",
		"globals": "^17.3.0",
		"typescript": "^5.9.3"
	},
	"engines": {
		"vscode": "^1.109.0"
	},
	"devEngines": {
		"runtime": {
			"name": "node",
			"version": "24"
		}
	}
}
